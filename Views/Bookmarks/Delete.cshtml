@model TaskHabitBookmarkApp.Models.Bookmark
@{
    ViewData["Title"] = "Delete Bookmark";
}
<h3>Delete Bookmark</h3>

<div class="alert alert-danger mt-3">
  <p>Are you sure you want to delete this bookmark?</p>
</div>

<div class="card">
  <div class="card-body">
    <h5 class="card-title">@Model.Title</h5>
    <a class="d-block mb-2" href="@Model.Url">@Model.Url</a>
    <p class="card-text">@Model.Notes</p>
  </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
  <input type="hidden" asp-for="Id" />
  <button type="submit" class="btn btn-danger">Delete</button>
  <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
