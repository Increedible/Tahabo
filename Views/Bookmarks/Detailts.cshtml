@model TaskHabitBookmarkApp.Models.Bookmark
@{
    ViewData["Title"] = "Bookmark Details";
}
<h3>Bookmark Details</h3>

<div class="card mt-3">
  <div class="card-body">
    <h5 class="card-title">@Model.Title</h5>
    <a class="d-block mb-2" asp-action="Visit" asp-route-id="@Model.Id">@Model.Url</a>
    <p class="card-text">@Model.Notes</p>
    <dl class="row">
      <dt class="col-sm-3">Favorite</dt>
      <dd class="col-sm-9">@(Model.IsFavorite ? "Yes" : "No")</dd>
      <dt class="col-sm-3">Clicks</dt>
      <dd class="col-sm-9">@Model.Clicks</dd>
      <dt class="col-sm-3">Created</dt>
      <dd class="col-sm-9">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>
      <dt class="col-sm-3">Tags</dt>
      <dd class="col-sm-9">
        @foreach (var t in Model.BookmarkTags.Select(bt => bt.Tag.Name))
        {
            <span class="badge text-bg-secondary">@t</span>
        }
      </dd>
    </dl>
  </div>
  <div class="card-footer d-flex justify-content-end gap-2">
    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    <a class="btn btn-outline-secondary" asp-action="Index">Back</a>
  </div>
</div>
