@model TaskHabitBookmarkApp.Models.Habit
@{
    ViewData["Title"] = "Create Habit";
}
<h3>Create Habit</h3>
<form asp-action="Create" method="post" class="mt-3">
  <div class="mb-3">
    <label asp-for="Name" class="form-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
  </div>
  <div class="mb-3">
    <label asp-for="Description" class="form-label"></label>
    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
  </div>
  <div class="mb-3">
    <label asp-for="Frequency" class="form-label"></label>
    <select asp-for="Frequency" class="form-select" asp-items="Html.GetEnumSelectList<Frequency>()"></select>
  </div>
  <div class="mt-3">
    <button class="btn btn-primary">Save</button>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
  </div>
</form>

@section Scripts {
  <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
}
