@model TaskHabitBookmarkApp.Models.Habit
@{
    ViewData["Title"] = "Delete Habit";
}
<h3>Delete Habit</h3>

<div class="alert alert-danger mt-3">
  <p>Are you sure you want to delete this habit?</p>
</div>

<div class="card">
  <div class="card-body">
    <h5 class="card-title">@Model.Name</h5>
    <p class="card-text">@Model.Description</p>
    <dl class="row">
      <dt class="col-sm-3">Frequency</dt>
      <dd class="col-sm-9">@Model.Frequency</dd>
      <dt class="col-sm-3">Streak</dt>
      <dd class="col-sm-9">@Model.Streak</dd>
    </dl>
  </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
  <input type="hidden" asp-for="Id" />
  <button type="submit" class="btn btn-danger">Delete</button>
  <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
