@model TaskHabitBookmarkApp.Models.Habit
@{
    ViewData["Title"] = "Habit Details";
}
<h3>Habit Details</h3>

<div class="card mt-3">
  <div class="card-body">
    <h5 class="card-title">@Model.Name</h5>
    <p class="card-text">@Model.Description</p>
    <dl class="row">
      <dt class="col-sm-3">Frequency</dt>
      <dd class="col-sm-9">@Model.Frequency</dd>
      <dt class="col-sm-3">Streak</dt>
      <dd class="col-sm-9">@Model.Streak</dd>
      <dt class="col-sm-3">Best Streak</dt>
      <dd class="col-sm-9">@Model.BestStreak</dd>
      <dt class="col-sm-3">Last Done</dt>
      <dd class="col-sm-9">@(Model.LastDoneDate?.ToString("yyyy-MM-dd") ?? "-")</dd>
    </dl>
  </div>
  <div class="card-footer d-flex justify-content-end gap-2">
    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    <a class="btn btn-outline-secondary" asp-action="Index">Back</a>
  </div>
</div>
