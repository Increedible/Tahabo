@model TaskHabitBookmarkApp.Models.TaskItem
@{
    ViewData["Title"] = "Delete Task";
}
<h3>Delete Task</h3>

<div class="alert alert-danger mt-3">
  <p>Are you sure you want to delete this task?</p>
</div>

<div class="card">
  <div class="card-body">
    <h5 class="card-title">@Model.Title</h5>
    <p class="card-text">@Model.Notes</p>
    <dl class="row">
      <dt class="col-sm-3">Due Date</dt>
      <dd class="col-sm-9">@(Model.DueDate?.ToString("yyyy-MM-dd") ?? "-")</dd>
      <dt class="col-sm-3">Priority</dt>
      <dd class="col-sm-9">@Model.Priority</dd>
    </dl>
  </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
  <input type="hidden" asp-for="Id" />
  <button type="submit" class="btn btn-danger">Delete</button>
  <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
