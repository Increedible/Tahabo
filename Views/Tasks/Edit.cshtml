@model TaskHabitBookmarkApp.Models.TaskItem
@{
    ViewData["Title"] = "Edit Task";
}
<h3>Edit Task</h3>
<form asp-action="Edit" method="post" class="mt-3">
  <input type="hidden" asp-for="Id" />
  <div class="mb-3">
    <label asp-for="Title" class="form-label"></label>
    <input asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>
  </div>
  <div class="mb-3">
    <label asp-for="Notes" class="form-label"></label>
    <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
  </div>
  <div class="row g-3">
    <div class="col-md-4">
      <label asp-for="DueDate" class="form-label"></label>
      <input asp-for="DueDate" class="form-control" type="date" />
    </div>
    <div class="col-md-4">
      <label asp-for="Priority" class="form-label"></label>
      <select asp-for="Priority" class="form-select" asp-items="Html.GetEnumSelectList<Priority>()"></select>
    </div>
    <div class="col-md-4 form-check mt-4">
      <input asp-for="IsCompleted" class="form-check-input" />
      <label asp-for="IsCompleted" class="form-check-label"></label>
    </div>
  </div>
  <div class="mt-3">
    <button class="btn btn-primary">Save</button>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
  </div>
</form>

@section Scripts {
  <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
}
